<UserControl x:Class="Health.Summary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <StackPanel x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Border BorderBrush="AliceBlue" BorderThickness="1">
            <TextBlock Text="test" x:Name="TextBlock" FontSize="36"/>
        </Border>
        <CheckBox x:Name="ShareWeibo" Margin="10,20" IsThreeState="False" Content="分享到微博" Checked="ShareWeibo_Checked" Unchecked="ShareWeibo_Unchecked" FontSize="24"/>
    </StackPanel>
</UserControl>